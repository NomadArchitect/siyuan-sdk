{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/siyuan-community/siyuan-sdk/main/schemas/kernel/api/filetree/createDocWithMd/payload.schema.json",
    "$comment": "v2.9.3",
    "$ref": "#/$defs/root",
    "$defs": {
        "root": {
            "title": "payload body",
            "description": "Create a document with Markdown",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "markdown",
                "notebook",
                "path"
            ],
            "properties": {
                "notebook": {
                    "type": "string",
                    "description": "notebook ID",
                    "pattern": "^\\d{14}-[0-9a-z]{7}$"
                },
                "path": {
                    "type": "string",
                    "description": "document path",
                    "pattern": "^(/[^/\\t\\r\\n\\u2028\\u2029]+)+$",
                    "examples": [
                        "/doc-name",
                        "/parent-doc-name/doc-name"
                    ]
                },
                "markdown": {
                    "type": "string",
                    "description": "Markdown text (GitLab Flavored Markdown, GFM)\nREF: https://github.github.com/gfm/"
                }
            }
        }
    }
}