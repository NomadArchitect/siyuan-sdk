{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/siyuan-community/siyuan-sdk/main/schemas/kernel/api/export/exportMdContent/payload.schema.json",
    "$comment": "v2.9.2",
    "$ref": "#/definitions/root",
    "definitions": {
        "root": {
            "title": "payload body",
            "description": "Exports the specified document block as Markdown",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "id"
            ],
            "properties": {
                "id": {
                    "type": "string",
                    "description": "doc block ID",
                    "pattern": "^\\d{14}-[0-9a-z]{7}$"
                }
            }
        }
    }
}